<script>
  function setTimestamp() {
    let hThrees = document.getElementsByTagName("h4");
    for (let i = 0; i < hThrees.length; i++) {
      let tag = hThrees[i];
      tag.textContent = "TimeStamp: " + moment(tag.textContent).format('MMMM Do YYYY, h:mm:ss a');
    }
  }
  setTimestamp()
</script>